<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vav"
    app:startDestination="@id/personalCenter">

    <fragment
        android:id="@+id/personalCenter"
        android:name="com.example.cimoshop.ui.personalcenter.PersonalCenter"
        android:label="personal_center_fragment"
        tools:layout="@layout/personal_center_fragment">
        <action
            android:id="@+id/action_personalCenter_to_loginFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cimoshop.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_personalCenter"
            app:exitAnim="@anim/fragment_close_exit"
            app:destination="@id/personalCenter" />
    </fragment>


</navigation>